  <property name="LOGS" value="./logs"></property>
  <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
  	<layout class="ch.qos.logback.classic.PatternLayout">
  		<Pattern> 
  		"%d{HH:nn:ss} [%t] %-5level %logger{36} - %msg%n"</Pattern>
  		</layout>
  </appender>
  
  
  <appender name="rollingFileApp" class="ch.qos.logback.core.RollingFileAppender">
  	<file>${LOGS}/myLogger.log</file>
  	<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
  	<pattern>%d %t %C{1.} [%t] %m%n</pattern>  	
  	</encoder>
  	
  	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
  		<fileNamePattern>${LOGS}.logger- %d{yyyy-MM-dd}.%i.log</fileNamePattern>
  		<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
  			<maxFileSize>50MB</maxFileSize>
  		</timeBasedFileNamingAndTriggeringPolicy>
  	</rollingPolicy>
  </appender>
  
  
    <Root level="WARN">
      <AppenderRef ref="Console"/>
    </Root>
    
    <logger level="INFO" name="com" additivity="false"><appender-ref ref="Console"></appender-ref></logger>
     <logger name="DEBUG" additivity="false"><appender-ref ref="rollingFileApp"></appender-ref></logger>
  
</Configuration>